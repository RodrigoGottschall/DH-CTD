// Array invertido
function imprimirInverso() {
  console.log(animes.reverse());
}
imprimirInverso();

// Somar array
let numbers = [20, 5, 15];
let soma = numbers.reduce(function somarArray(soma, i) {
  return soma + i;
});
console.log(soma);


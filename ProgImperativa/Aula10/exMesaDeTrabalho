let juntar = ["r", "o", "d", "r", "i", "g", "o"];
function join() {
  console.log(juntar.join(""));
}
join();


// Coleções e Filmes
let catalogo1 = ["star wars", "matrix", "mr. robot", "o preço do amanhã", "a vida é bela"];
let catalogo2 = ["toy story", "finding Nemo", "kung-fu panda", "wally", "fortnite"];

function colocarmaisculo(array) {
  for (let i = 0; i < array.length; ++i) {
    array[i] = array[i].toUpperCase();
  };
};
colocarmaisculo(catalogo1);
console.log(catalogo1);

let game = catalogo2.pop()
console.log(game);

// Notas filmes
const asiaScores = [8, 10, 6, 9, 10, 6, 6, 8, 4];
const euroScores = [8, 10, 6, 8, 10, 6, 7, 9, 5];

function avalia_nota(asiaScores, euroScores){
  for(let i=0; i<asiaScores.length; ++i){
      if(asiaScores[i]==euroScores[i]){
          console.log("Nota numero "+(i+1)+" = são iguais e possuem valor de: "+asiaScores[i]);
      }else{
          console.log("Nota numero "+(i+1)+" = não são iguais e possuem os valores de asiaScores = "+asiaScores[i]+" euroScores = "+euroScores[i]);
      };
  };
};
avalia_nota(asiaScores, euroScores);

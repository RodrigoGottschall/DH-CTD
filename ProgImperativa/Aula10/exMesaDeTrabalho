// Praticando
let listaAnimes = ['FullM', 'DragonB', 'Parasyte', 'AoT']
let animes = ['AoT', 'OnePiece', 'Bleach', 'Naruto']

// Acessar elementos específicos do array
console.log(animes[1])

// Modificar elementos e imprimir no console
animes[1] = 'DragonB'
console.log(animes)

// Adicionar elementos a um array
animes.push("TokyoRevengers")
console.log(animes);
animes.unshift("FullM")
console.log(animes);

// Extrair elementos de um array
animes.pop()
console.log(animes);
animes.shift()
console.log(animes);

// Comparar elementos de um array
console.log(animes[0] == listaAnimes[3]);

